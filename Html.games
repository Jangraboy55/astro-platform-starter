  .wrap{display:grid;place-items:center;padding:16px}
  canvas{width:min(92vw,520px);height:min(92vw,520px);background:radial-gradient(600px 600px at 20% 10%, #0e1330, #070a18);border:1px solid #2a315c;border-radius:18px;box-shadow:0 20px 60px rgba(0,0,0,.45)}
  .hud{display:flex;justify-content:space-between;gap:12px;max-width:520px;width:92vw;margin:10px auto}
  .btn{background:#00d4ff;color:#0b0f1f;border:none;border-radius:12px;padding:10px 14px;font-weight:800}
  .score{color:#9fb0d8}
  .hint{color:#6980b8;font-size:12px;text-align:center;margin-top:6px}
</style>
</head>
<body>
<header><a href="index.html" style="color:#e8ecff;text-decoration:none;font-weight:800">← My Games Hub</a></header>
<div class="wrap">
  <canvas id="c" width="400" height="400"></canvas>
  <div class="hud">
    <button class="btn" id="restart">Restart</button>
    <div class="score">Score: <span id="score">0</span></div>
  </div>
  <div class="hint">Use ← ↑ → ↓ keys or swipe on mobile</div>
</div>
<footer>Snake Neo — v1.0</footer>
<script>
const cvs=document.getElementById('c'),ctx=cvs.getContext('2d');
let grid=20, vx=1, vy=0, snake=[{x:8,y:10}], apple=rand(), score=0, alive=true, speed=120, last=0;
function rand(){return {x:Math.floor(Math.random()* (cvs.width/grid)), y:Math.floor(Math.random()* (cvs.height/grid))}}
function drawCell(x,y,color){ctx.fillStyle=color;ctx.fillRect(x*grid,y*grid,grid-1,grid-1)}
function loop(ts){if(!alive) return; if(ts-last<speed) return requestAnimationFrame(loop); last=ts;
  // move
  const head={x:(snake[0].x+vx+cvs.width/grid)%(cvs.width/grid), y:(snake[0].y+vy+cvs.height/grid)%(cvs.height/grid)};
  // collide with self
  if(snake.some((s,i)=>i&&s.x===head.x&&s.y===head.y)){alive=false; flash(); return}
  snake.unshift(head);
  // eat
  if(head.x===apple.x && head.y===apple.y){score++; document.getElementById('score').textContent=score; apple=rand(); if(speed>60) speed-=2}
  else snake.pop();
  // draw
  ctx.clearRect(0,0,cvs.width,cvs.height);
  // grid shine
  for(let i=0;i<cvs.width/grid;i++){for(let j=0;j<cvs.height/grid;j++){ctx.fillStyle='rgba(255,255,255,0.02)';ctx.fillRect(i*grid,j*grid,grid,grid)}}
  drawCell(apple.x,apple.y,'#7cff6b');
  snake.forEach((s,i)=>drawCell(s.x,s.y,i? '#00d4ff':'#7cff6b'));
  requestAnimationFrame(loop)
}
function flash(){let t=0; const id=setInterval(()=>{t++; cvs.style.filter= t%2? 'brightness(1.6)':'brightness(1)'; if(t>6){clearInterval(id); alert('Game Over! Score: '+score)}},80)}
window.addEventListener('keydown',e=>{const k=e.keyCode; if(k===37&&vx!==1){vx=-1;vy=0} if(k===38&&vy!==1){vx=0;vy=-1} if(k===39&&vx!==-1){vx=1;vy=0} if(k===40&&vy!==-1){vx=0;vy=1}});
// touch controls
let sx=0, sy=0; cvs.addEventListener('touchstart',e=>{const t=e.touches[0]; sx=t.clientX; sy=t.clientY},{passive:true});
cvs.addEventListener('touchmove',e=>{const t=e.touches[0]; const dx=t.clientX-sx, dy=t.clientY-sy; if(Math.abs(dx)>24||Math.abs(dy)>24){ if(Math.abs(dx)>Math.abs(dy)){ if(dx>0&&vx!==-1){vx=1;vy=0} else if(dx<0&&vx!==1){vx=-1;vy=0} } else { if(dy>0&&vy!==-1){vx=0;vy=1} else if(dy<0&&vy!==1){vx=0;vy=-1} } sx=t.clientX; sy=t.clientY }},{passive:true});
requestAnimationFrame(loop);
document.getElementById('restart').onclick=()=>{snake=[{x:8,y:10}]; vx=1; vy=0; score=0; speed=120; alive=true; apple=rand(); requestAnimationFrame(loop)};
</script>
