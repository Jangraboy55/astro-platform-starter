  .cell{width:min(25vw,120px);height:min(25vw,120px);display:grid;place-items:center;font-size:48px;font-weight:800;background:#1a234b;border-radius:12px;cursor:pointer;box-shadow:0 10px 28px rgba(0,0,0,.35);transition:transform .15s}
  .cell:hover{transform:translateY(-2px)}
  .hud{margin-top:14px;display:flex;gap:12px;align-items:center;justify-content:center;flex-wrap:wrap}
  .btn{background:#00d4ff;color:#0b0f1f;border:none;border-radius:12px;padding:10px 14px;font-weight:800}
  .meta{color:#9fb0d8}
</style>
</head>
<body>
<header><a href="index.html" style="color:#e8ecff;text-decoration:none;font-weight:800">← My Games Hub</a></header>
<div class="wrap">
  <div class="board" id="board"></div>
  <div class="hud">
    <button class="btn" id="restart">Restart</button>
    <label style="display:flex;align-items:center;gap:6px"><input id="ai" type="checkbox" checked> Play vs AI</label>
    <div class="meta" id="status">Your turn (X)</div>
  </div>
</div>
<footer>Tic‑Tac‑Pro — v1.0</footer>
<script>
const boardEl=document.getElementById('board');
let cells=Array(9).fill(null), turn='X', over=false;
for(let i=0;i<9;i++){const d=document.createElement('div'); d.className='cell'; d.dataset.i=i; d.onclick=()=>play(i); boardEl.appendChild(d)}
function win(c){const l=[[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];return l.some(a=>a.every(i=>cells[i]===c))}
function draw(){document.querySelectorAll('.cell').forEach((d,i)=>d.textContent=cells[i]||'')}
function play(i){if(over||cells[i])return; cells[i]=turn; draw(); if(win(turn)){over=true; return setStatus(turn+' wins!')} if(!cells.includes(null)){over=true; return setStatus("It's a draw")}
  turn = turn==='X'?'O':'X'; setStatus((turn==='X'?'Your':'AI')+" turn ("+turn+")");
  if(turn==='O'&&document.getElementById('ai').checked) setTimeout(aiMove,240)
}
function setStatus(t){document.getElementById('status').textContent=t}
function aiMove(){ // simple minimax‑lite
  const best = bestMove('O'); play(best);
}
function bestMove(player){
  const opponent= player==='O'?'X':'O';
  // 1) win now
  for(let i=0;i<9;i++){ if(!cells[i]){ cells[i]=player; if(win(player)){ cells[i]=null; return i } cells[i]=null } }
  // 2) block
  for(let i=0;i<9;i++){ if(!cells[i]){ cells[i]=opponent; if(win(opponent)){ cells[i]=null; return i } cells[i]=null } }
  // 3) center, corners, sides
  const pref=[4,0,2,6,8,1,3,5,7];
  for(const i of pref){ if(!cells[i]) return i }
}
function reset(){cells=Array(9).fill(null); turn='X'; over=false; draw(); setStatus('Your turn (X)')}
reset();
document.getElementById('restart').onclick=reset;
</script>
</body>
