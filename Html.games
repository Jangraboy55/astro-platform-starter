  footer{border-top:1px solid #102036;border-bottom:none;text-align:center;color:#9fb0d8}
  .wrap{display:grid;place-items:center;padding:16px}
  canvas{width:min(92vw,520px);height:min(92vw,680px);background:linear-gradient(180deg,#091c30,#0d2a49);border:1px solid #14365a;border-radius:18px;box-shadow:0 20px 60px rgba(0,0,0,.45)}
  .hud{display:flex;justify-content:space-between;gap:12px;max-width:520px;width:92vw;margin:10px auto}
  .btn{background:#00d4ff;color:#0b0f1f;border:none;border-radius:12px;padding:10px 14px;font-weight:800}
  .score{color:#9fb0d8}
</style>
</head>
<body>
<header><a href="index.html" style="color:#e8ecff;text-decoration:none;font-weight:800">← My Games Hub</a></header>
<div class="wrap">
  <canvas id="cv" width="400" height="520"></canvas>
  <div class="hud">
    <button class="btn" id="restart">Restart</button>
    <div class="score">Score: <span id="s">0</span></div>
  </div>
</div>
<footer>Flappy Sky — v1.0</footer>
<script>
const cv=document.getElementById('cv'), g=cv.getContext('2d');
let bird, pipes, t, score, alive;
function reset(){bird={x:110,y:240,v:0}; pipes=[]; t=0; score=0; alive=true}
function pipe(){const gap=120; const h=60+Math.random()*240; pipes.push({x:cv.width+40, top:h, bottom:h+gap})}
function update(){ if(!alive) return; t++; bird.v+=0.38; bird.y+=bird.v; if(t%90===0) pipe(); pipes.forEach(p=>p.x-=2.2); if(pipes[0]&&pipes[0].x<-80) pipes.shift();
  // collision
  for(const p of pipes){ if(bird.x>p.x-20 && bird.x<p.x+60){ if(bird.y<p.top || bird.y>p.bottom){ alive=false; setTimeout(()=>alert('Game Over! Score: '+score),10) } } if(p.x+60===Math.floor(bird.x)) score++ }
  if(bird.y<0||bird.y>cv.height) { alive=false; setTimeout(()=>alert('Game Over! Score: '+score),10) }
}
function draw(){ g.clearRect(0,0,cv.width,cv.height);
  // stars
  for(let i=0;i<40;i++){ g.globalAlpha=.2; g.fillStyle='#fff'; g.fillRect((i*53+t)%cv.width, (i*37)%cv.height, 2,2); g.globalAlpha=1 }
  // pipes
  g.fillStyle='#55e58b';
  pipes.forEach(p=>{ g.fillRect(p.x,0,60,p.top); g.fillRect(p.x,p.bottom,60,cv.height-p.bottom) });
  // bird
  g.fillStyle='#00d4ff'; g.beginPath(); g.arc(bird.x,bird.y,12,0,Math.PI*2); g.fill();
  document.getElementById('s').textContent=score;
}
function loop(){ update(); draw(); requestAnimationFrame(loop) }
function flap(){ if(!alive) return; bird.v=-6 }
cv.addEventListener('mousedown',flap); cv.addEventListener('touchstart',e=>{flap(); e.preventDefault()},{passive:false});
window.addEventListener('keydown',e=>{ if(e.code==='Space') flap() });
reset(); loop();
document.getElementById('restart').onclick=()=>{reset()}
</script>
</body>
</html>
